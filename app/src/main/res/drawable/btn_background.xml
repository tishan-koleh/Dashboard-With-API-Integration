<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Checked state -->
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="#0E6FFF"/> <!-- Color when checked -->
            <corners android:radius="24dp"/> <!-- Rounded corners -->
        </shape>
    </item>
    <!-- Default state -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#F5F5F5"/> <!-- Default color -->
            <corners android:radius="24dp"/> <!-- Rounded corners -->
        </shape>
    </item>
</selector>
